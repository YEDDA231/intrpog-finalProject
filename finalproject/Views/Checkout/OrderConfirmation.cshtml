@model finalproject.Models.Order
@{
    ViewData["Title"] = "Order Confirmation - JOEB N FRIENDS";
}

<div class="container my-5">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="text-center mb-5">
        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
        <h1 class="fw-bold">Order Confirmed!</h1>
        <p class="text-muted">Thank you for your purchase</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Order Number</h6>
                            <h4 class="fw-bold">#@Model.Id</h4>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Order Date</h6>
                            <h4 class="fw-bold">@Model.OrderDate.ToString("MMM dd, yyyy")</h4>
                        </div>
                    </div>

                    <hr>

                    <h5 class="mb-3">Order Details</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (item.Product != null)
                                                {
                                                    <img src="@item.Product.ImagePath" alt="@item.Product.Name" 
                                                         class="rounded me-2" style="width: 50px; height: 50px; object-fit: cover;"
                                                         onerror="this.src='https://via.placeholder.com/50x50'">
                                                    <span>@item.Product.Name</span>
                                                }
                                                else
                                                {
                                                    <span>Product #@item.ProductId</span>
                                                }
                                            </div>
                                        </td>
                                        <td>$@item.Price.ToString("F2")</td>
                                        <td>@item.Quantity</td>
                                        <td>$@((item.Price * item.Quantity).ToString("F2"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Total:</th>
                                    <th>$@Model.TotalAmount.ToString("F2")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">Shipping Address</h6>
                            <p>@Model.ShippingAddress</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">Order Status</h6>
                            <span class="badge bg-warning">@Model.Status</span>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <a asp-controller="Orders" asp-action="Index" class="btn btn-primary me-2">
                            <i class="fas fa-shopping-bag me-2"></i>View My Orders
                        </a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

