@model finalproject.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Login - JOEB N FRIENDS";
}

<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="text-center mb-4">
                <h1 class="fw-bold mb-2">Welcome Back</h1>
                <p class="text-muted">Sign in to your account</p>
            </div>
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @ViewData.ModelState[string.Empty].Errors[0].ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form asp-action="Login" method="post">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="your.email@example.com" />
                            <span asp-validation-for="Email" class="text-muted small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-muted small"></span>
                        </div>
                        
                        <div class="mb-4 form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </button>
                        </div>
                        
                        <div class="text-center mb-3">
                            <a asp-action="ForgotPassword" class="text-decoration-none">
                                <i class="fas fa-key me-1"></i>Forgot your password?
                            </a>
                        </div>
                    </form>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <p class="mb-0">Don't have an account? <a asp-action="Register" class="fw-bold">Sign up here</a></p>
                    </div>
                    
                    <div class="mt-4 p-4 bg-light rounded-3">
                        <h6 class="fw-bold mb-3"><i class="fas fa-info-circle me-2"></i>Demo Accounts</h6>
                        <div class="small text-muted">
                            <div class="mb-2">
                                <strong>Admin:</strong><br>
                                <code>admin@joebnfriends.com</code> / <code>admin123</code>
                            </div>
                            <div>
                                <strong>User:</strong><br>
                                <code>user@test.com</code> / <code>user123</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

