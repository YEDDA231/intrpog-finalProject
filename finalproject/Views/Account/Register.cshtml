@model finalproject.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Register - JOEB N FRIENDS";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="text-center mb-4">
                <h1 class="fw-bold mb-2">Create Account</h1>
                <p class="text-muted">Join JOEB N FRIENDS and start shopping</p>
            </div>
            
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="FullName" class="form-label fw-semibold">
                                    <i class="fas fa-user me-2 text-muted"></i>Full Name
                                </label>
                                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Enter your full name" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-12 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-2 text-muted"></i>Email Address
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="your.email@example.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label fw-semibold">
                                    <i class="fas fa-lock me-2 text-muted"></i>Password
                                </label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                <small class="form-text text-muted">Minimum 4 characters</small>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                    <i class="fas fa-lock me-2 text-muted"></i>Confirm Password
                                </label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                        </div>
                        
                        <div class="text-center">
                            <p class="mb-0 small">
                                Already have an account? 
                                <a asp-action="Login" class="fw-bold text-decoration-none">Sign in here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <p class="small text-muted mb-0">
                    By creating an account, you agree to our 
                    <a href="#" class="text-decoration-none">Terms of Service</a> and 
                    <a href="#" class="text-decoration-none">Privacy Policy</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

