@{
    ViewData["Title"] = "Password Reset Successful - JOEB N FRIENDS";
}

<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="text-center mb-4">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h1 class="fw-bold mb-2">Password Reset Successful</h1>
                <p class="text-muted">Your password has been reset successfully</p>
            </div>
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Success!</strong> Your password has been changed. You can now login with your new password.
                    </div>
                    
                    <div class="d-grid mt-4">
                        <a asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

