@{
    ViewData["Title"] = "Password Reset Link Sent - JOEB N FRIENDS";
    var resetLink = ViewBag.ResetLink as string;
    var email = ViewBag.Email as string;
    var token = ViewBag.Token as string;
}

<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <i class="fas fa-envelope-circle-check fa-4x text-success mb-3"></i>
                <h1 class="fw-bold mb-2">Check Your Email</h1>
                <p class="text-muted">We've sent a password reset link to your email address</p>
            </div>
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    @if (!string.IsNullOrEmpty(resetLink))
                    {
                        <div class="alert alert-info">
                            <h6 class="fw-bold mb-3"><i class="fas fa-info-circle me-2"></i>Development Mode</h6>
                            <p class="mb-2">Since email is not configured, here is your password reset link:</p>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Reset Link:</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="resetLink" value="@resetLink" readonly>
                                    <button class="btn btn-outline-secondary" type="button" onclick="copyResetLink()">
                                        <i class="fas fa-copy"></i> Copy
                                    </button>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Or use this token:</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="resetToken" value="@token" readonly>
                                    <button class="btn btn-outline-secondary" type="button" onclick="copyToken()">
                                        <i class="fas fa-copy"></i> Copy
                                    </button>
                                </div>
                            </div>
                            <a href="@resetLink" class="btn btn-primary w-100">
                                <i class="fas fa-key me-2"></i>Reset Password Now
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <p class="mb-0">If an account exists with the email <strong>@email</strong>, a password reset link has been sent.</p>
                        </div>
                    }
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <a asp-action="Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyResetLink() {
            const linkInput = document.getElementById('resetLink');
            linkInput.select();
            document.execCommand('copy');
            alert('Reset link copied to clipboard!');
        }
        
        function copyToken() {
            const tokenInput = document.getElementById('resetToken');
            tokenInput.select();
            document.execCommand('copy');
            alert('Token copied to clipboard!');
        }
    </script>
}

