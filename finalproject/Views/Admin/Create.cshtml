@model finalproject.Models.Product
@{
    ViewData["Title"] = "Add Product - Admin Panel";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Add New Product</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Product Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">Price</label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label">Category</label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">Select Category</option>
                                    <option value="SHIRTS">SHIRTS</option>
                                    <option value="PANTS">PANTS</option>
                                    <option value="SHOES">SHOES</option>
                                    <option value="DRESS">DRESS</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="SubCategory" class="form-label">Subcategory</label>
                                <input asp-for="SubCategory" class="form-control" placeholder="e.g., MENS, WOMENS, MAXI DRESS" />
                                <span asp-validation-for="SubCategory" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Product Image</label>
                            <div class="mb-2">
                                <label for="imageFile" class="btn btn-outline-primary">
                                    <i class="fas fa-upload me-2"></i>Upload Single Image
                                </label>
                                <input type="file" id="imageFile" name="imageFile" accept="image/*" class="d-none" onchange="previewImage(this, 'singlePreview')" />
                                <small class="text-muted ms-2">or</small>
                                <label for="imageFiles" class="btn btn-outline-info">
                                    <i class="fas fa-folder me-2"></i>Upload Image Folder
                                </label>
                                <input type="file" id="imageFiles" name="imageFiles" accept="image/*" multiple class="d-none" onchange="previewImage(this, 'multiplePreview')" />
                            </div>
                            <div id="singlePreview" class="mt-2"></div>
                            <div id="multiplePreview" class="mt-2"></div>
                            <div class="mt-2">
                                <label asp-for="ImagePath" class="form-label">Or Enter Image Path Manually</label>
                                <input asp-for="ImagePath" class="form-control" placeholder="/images/CATEGORY/SUBCATEGORY/image.png" />
                                <span asp-validation-for="ImagePath" class="text-danger"></span>
                                <small class="form-text text-muted">Example: /images/SHIRTS/MENS/1.PNG</small>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label">Stock Quantity</label>
                            <input asp-for="Stock" class="form-control" type="number" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImage(input, previewId) {
            const preview = document.getElementById(previewId);
            preview.innerHTML = '';
            
            if (input.files && input.files.length > 0) {
                const files = input.files;
                const maxFiles = input.multiple ? 5 : 1; // Show max 5 previews for multiple
                
                for (let i = 0; i < Math.min(files.length, maxFiles); i++) {
                    const file = files[i];
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.className = 'img-thumbnail me-2 mb-2';
                        img.style.maxWidth = '150px';
                        img.style.maxHeight = '150px';
                        preview.appendChild(img);
                    };
                    
                    reader.readAsDataURL(file);
                }
                
                if (files.length > maxFiles) {
                    const more = document.createElement('p');
                    more.className = 'text-muted small';
                    more.textContent = `+ ${files.length - maxFiles} more file(s)`;
                    preview.appendChild(more);
                }
            }
        }
    </script>
}

