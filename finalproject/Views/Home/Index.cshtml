@{
    ViewData["Title"] = "Home - JOEB N FRIENDS";
    var featuredProducts = ViewBag.FeaturedProducts as List<finalproject.Models.Product> ?? new List<finalproject.Models.Product>();
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <h1>JOEB N FRIENDS</h1>
        <p>Discover the latest fashion trends</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg">Shop Now</a>
    </div>
</div>

<!-- Featured Products -->
<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">NEW ARRIVALS</h2>
        <p class="text-muted">Check out our latest collection</p>
    </div>
    
    @if (featuredProducts.Any())
    {
        <div class="product-grid">
            @foreach (var product in featuredProducts)
            {
                <div class="product-card" onclick="location.href='@Url.Action("Details", "Product", new { id = product.Id })'">
                    <div class="product-image-wrapper">
                        <img src="@product.ImagePath" alt="@product.Name" class="product-image" onerror="this.src='https://via.placeholder.com/300x300?text=No+Image'">
                        @if (product.Stock < 10)
                        {
                            <div class="product-badge">Low Stock</div>
                        }
                    </div>
                    <div class="product-info">
                        <div class="product-name">@product.Name</div>
                        <div class="product-price">$@product.Price.ToString("F2")</div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <p class="text-muted">No products available at the moment.</p>
        </div>
    }
    
    <div class="text-center mt-5">
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">View All Products</a>
    </div>
</div>

<!-- Categories Section -->
<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold mb-2">Shop by Category</h2>
        <p class="text-muted">Explore our collections</p>
    </div>
    <div class="row g-4">
        <div class="col-md-3 col-sm-6">
            <a asp-controller="Product" asp-action="Index" asp-route-category="SHIRTS" class="text-decoration-none">
                <div class="card h-100 category-card">
                    <div class="card-body text-center p-5">
                        <i class="fas fa-tshirt fa-4x mb-4" style="color: #667eea;"></i>
                        <h5 class="card-title fw-bold">SHIRTS</h5>
                        <p class="text-muted small mb-0">Shop Now →</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a asp-controller="Product" asp-action="Index" asp-route-category="PANTS" class="text-decoration-none">
                <div class="card h-100 category-card">
                    <div class="card-body text-center p-5">
                        <i class="fas fa-socks fa-4x mb-4" style="color: #764ba2;"></i>
                        <h5 class="card-title fw-bold">PANTS</h5>
                        <p class="text-muted small mb-0">Shop Now →</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a asp-controller="Product" asp-action="Index" asp-route-category="SHOES" class="text-decoration-none">
                <div class="card h-100 category-card">
                    <div class="card-body text-center p-5">
                        <i class="fas fa-shoe-prints fa-4x mb-4" style="color: #f093fb;"></i>
                        <h5 class="card-title fw-bold">SHOES</h5>
                        <p class="text-muted small mb-0">Shop Now →</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a asp-controller="Product" asp-action="Index" asp-route-category="DRESS" class="text-decoration-none">
                <div class="card h-100 category-card">
                    <div class="card-body text-center p-5">
                        <i class="fas fa-female fa-4x mb-4" style="color: #ff6b6b;"></i>
                        <h5 class="card-title fw-bold">DRESSES</h5>
                        <p class="text-muted small mb-0">Shop Now →</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
.category-card {
    transition: var(--transition);
}

.category-card:hover {
    transform: translateY(-10px);
}

.category-card:hover i {
    transform: scale(1.1);
    transition: var(--transition);
}
</style>
