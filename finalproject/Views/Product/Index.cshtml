@model IEnumerable<finalproject.Models.Product>
@{
    ViewData["Title"] = "Products - JOEB N FRIENDS";
    var category = ViewBag.Category as string;
    var subCategory = ViewBag.SubCategory as string;
    var gender = ViewBag.Gender as string;
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var subCategories = ViewBag.SubCategories as List<string> ?? new List<string>();
}

<div class="container my-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-2">@(category ?? "All Products")</h1>
            @if (!string.IsNullOrEmpty(gender))
            {
                <p class="text-muted mb-0">Showing @gender products</p>
            }
        </div>
    </div>

    <!-- Gender Filter Section - Alternate Buttons -->
    <div class="mb-4">
        <div class="gender-filter-buttons">
            <a asp-action="Index" 
               asp-route-category="@category" 
               asp-route-gender="MENS"
               class="btn @(gender == "MENS" ? "active" : "")">
                <i class="fas fa-mars me-2"></i> Men's
            </a>
            <a asp-action="Index" 
               asp-route-category="@category" 
               asp-route-gender="WOMENS"
               class="btn @(gender == "WOMENS" ? "active" : "")">
                <i class="fas fa-venus me-2"></i> Women's
            </a>
        </div>
    </div>

    <!-- Category Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 mb-3 mb-md-0">
                    <label class="form-label fw-bold text-uppercase small mb-2">Shop by Category</label>
                </div>
                <div class="col-md-9">
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="Index" 
                           asp-route-gender="@gender"
                           class="btn @(string.IsNullOrEmpty(category) ? "btn-primary" : "btn-outline-primary") btn-sm">
                            All Categories
                        </a>
                        @foreach (var cat in categories)
                        {
                            <a asp-action="Index" 
                               asp-route-category="@cat" 
                               asp-route-gender="@gender"
                               class="btn @(category == cat ? "btn-primary" : "btn-outline-primary") btn-sm">
                                @cat
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Products Grid -->
    @if (Model.Any())
    {
        <div class="row mb-3">
            <div class="col-12">
                <p class="text-muted mb-0">
                    <strong>@Model.Count()</strong> product@(Model.Count() != 1 ? "s" : "") found
                </p>
            </div>
        </div>
        <div class="product-grid">
            @foreach (var product in Model)
            {
                <div class="product-card" onclick="location.href='@Url.Action("Details", new { id = product.Id })'">
                    <div class="product-image-wrapper">
                        <img src="@product.ImagePath" alt="@product.Name" class="product-image" onerror="this.src='https://via.placeholder.com/300x300?text=No+Image'">
                        @if (product.Stock < 10)
                        {
                            <div class="product-badge">Low Stock</div>
                        }
                    </div>
                    <div class="product-info">
                        <div class="product-name">@product.Name</div>
                        <div class="product-price">$@product.Price.ToString("F2")</div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h4 class="fw-bold mb-2">No products found</h4>
                <p class="text-muted mb-4">Try adjusting your filters to see more products.</p>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-redo"></i> Clear All Filters
                </a>
            </div>
        </div>
    }
</div>

