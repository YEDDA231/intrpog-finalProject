@model finalproject.Models.Order
@{
    ViewData["Title"] = $"Order #{Model.Id} - JOEB N FRIENDS";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Order Details</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Orders
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-box me-2"></i>Order Items</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (item.Product != null)
                                                {
                                                    <img src="@item.Product.ImagePath" alt="@item.Product.Name" 
                                                         class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;"
                                                         onerror="this.src='https://via.placeholder.com/60x60'">
                                                    <div>
                                                        <h6 class="mb-0">@item.Product.Name</h6>
                                                        <small class="text-muted">@item.Product.Category</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span>Product #@item.ProductId</span>
                                                }
                                            </div>
                                        </td>
                                        <td>$@item.Price.ToString("F2")</td>
                                        <td>@item.Quantity</td>
                                        <td class="fw-bold">$@((item.Price * item.Quantity).ToString("F2"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Total:</th>
                                    <th>$@Model.TotalAmount.ToString("F2")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h5 class="card-title mb-4">Order Information</h5>
                    
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Order Status</h6>
                        @{
                            var statusClass = Model.Status switch
                            {
                                "Pending" => "bg-warning",
                                "Processing" => "bg-info",
                                "Shipped" => "bg-primary",
                                "Delivered" => "bg-success",
                                "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            };
                            var statusIcon = Model.Status switch
                            {
                                "Pending" => "fa-clock",
                                "Processing" => "fa-cog",
                                "Shipped" => "fa-shipping-fast",
                                "Delivered" => "fa-check-circle",
                                "Cancelled" => "fa-times-circle",
                                _ => "fa-question"
                            };
                            var statusText = Model.Status switch
                            {
                                "Pending" => "Pending Approval",
                                "Processing" => "Being Processed",
                                "Shipped" => "Shipped",
                                "Delivered" => "Delivered",
                                "Cancelled" => "Cancelled",
                                _ => Model.Status
                            };
                        }
                        <span class="badge @statusClass fs-6 p-2">
                            <i class="fas @statusIcon me-2"></i>@statusText
                        </span>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted mb-2">Order Number</h6>
                        <p class="mb-0 fw-bold">#@Model.Id</p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted mb-2">Order Date</h6>
                        <p class="mb-0">@Model.OrderDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted mb-2">Shipping Address</h6>
                        <p class="mb-0">@Model.ShippingAddress</p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted mb-2">Total Amount</h6>
                        <p class="mb-0 fs-4 fw-bold text-primary">$@Model.TotalAmount.ToString("F2")</p>
                    </div>

                    @if (Model.Status == "Shipped")
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Your order is on the way!</strong> You should receive it soon.
                        </div>
                    }
                    else if (Model.Status == "Delivered")
                    {
                        <div class="alert alert-success mb-0">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Order Delivered!</strong> Thank you for your purchase.
                        </div>
                    }
                    else if (Model.Status == "Pending")
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-clock me-2"></i>
                            <strong>Pending Approval</strong> Your order is waiting for admin approval.
                        </div>
                    }
                    else if (Model.Status == "Processing")
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-cog me-2"></i>
                            <strong>Being Processed</strong> Your order is being prepared for shipment.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

